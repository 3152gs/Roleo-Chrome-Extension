{
  "manifest_version": 2,

  "name": "Roleo",
  "description": "This extension allows the user to search for reviews.",
  "version": "1.0.0",

  "background":{
    "scripts": ["background.js", "jquery-3.3.1.js"]
  },
  
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Roleo"
  },
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ]
}